<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/countryListFragment">

    <fragment
        android:id="@+id/countryListFragment"
        android:name="com.aqtanb.sis2.CountryListFragment"
        android:label="Countries"
        tools:layout="@layout/fragment_country_list">
        <action
            android:id="@+id/action_countryListFragment_to_countryDetailFragment"
            app:destination="@id/countryDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/countryDetailFragment"
        android:name="com.aqtanb.sis2.CountryDetailFragment"
        android:label="Country Details"
        tools:layout="@layout/fragment_country_detail">
        <argument
            android:name="countryName"
            app:argType="string" />
        <argument
            android:name="flagUrl"
            app:argType="string" />
        <argument
            android:name="voteState"
            app:argType="string" />
    </fragment>

</navigation>